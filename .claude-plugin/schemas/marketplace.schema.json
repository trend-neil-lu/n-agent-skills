{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "marketplace.schema.json",
  "title": "Plugin Marketplace Schema",
  "description": "Schema for Claude Code plugin marketplace configuration",
  "type": "object",
  "required": ["name", "owner", "plugins"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "name": {
      "type": "string",
      "description": "Marketplace name identifier",
      "pattern": "^[a-z][a-z0-9-]*$"
    },
    "version": {
      "type": "string",
      "description": "Marketplace version (semver)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "owner": {
      "type": "object",
      "description": "Marketplace owner information",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "url": { "type": "string", "format": "uri" }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Marketplace metadata",
      "properties": {
        "description": { "type": "string" },
        "homepage": { "type": "string", "format": "uri" },
        "license": { "type": "string" },
        "keywords": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "categories": {
      "type": "array",
      "description": "Plugin categories",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-]*$"
          },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "icon": { "type": "string" }
        }
      }
    },
    "plugins": {
      "type": "array",
      "description": "List of plugins in the marketplace",
      "items": {
        "type": "object",
        "required": ["name", "source"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Plugin name (kebab-case)",
            "pattern": "^[a-z][a-z0-9-]*$"
          },
          "source": {
            "type": "string",
            "description": "Path to plugin directory"
          },
          "description": { "type": "string" },
          "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          },
          "author": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "email": { "type": "string", "format": "email" },
              "url": { "type": "string", "format": "uri" }
            }
          },
          "keywords": {
            "type": "array",
            "items": { "type": "string" }
          },
          "category": { "type": "string" }
        }
      }
    }
  }
}
